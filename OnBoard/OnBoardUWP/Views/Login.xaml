<Page
    x:Class="OnBoardUWP.Views.Login"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OnBoardUWP.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <TextBlock HorizontalAlignment="Left" Height="38" Margin="363,210,0,0" Text="Enter seat number" FontWeight="Bold" FontSize="30" TextWrapping="Wrap" VerticalAlignment="Top" />
        <Button Content="Enter" HorizontalAlignment="Left" Margin="363,388,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <TextBox x:Name="seatNumber" HorizontalAlignment="Left" Margin="363,255,0,0" Text="TextBox" VerticalAlignment="Top" Height="117" Width="258" FontSize="35" BeforeTextChanging="Textbox_BeforeChange"/>
        <TextBlock HorizontalAlignment="Left" Margin="779,210,0,0" Text="I'm a air hostes" FontSize="30" FontWeight="Bold" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBox x:Name="hostedId" HorizontalAlignment="Left" Margin="779,255,0,0" Text="TextBox" VerticalAlignment="Top" Height="117" Width="258" FontSize="35" BeforeTextChanging="Textbox_BeforeChange"/>
        <Button Content="Enter" HorizontalAlignment="Left" Margin="779,388,0,0" VerticalAlignment="Top" Click="ButtonAir_Click"/>
    </Grid>
</Page>
