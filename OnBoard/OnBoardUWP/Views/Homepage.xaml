            <StackPanel Orientation="Vertical" Background="CornflowerBlue">
                <Button x:Name="HamburgerButton" 
                        Background="Transparent"
                        Click="HamburgerButton_Click"
                        Padding="10" 
                        HorizontalAlignment="Left">
                    <SymbolIcon Symbol="GlobalNavigationButton" />
                </Button>
                <ListView x:Name="list"
                      HorizontalAlignment="Left" SelectionChanged="list_SelectionChanged" Width="170">
                    <ListViewItem x:Name="home" IsSelected="True">
                        <StackPanel Orientation="Horizontal">
                            <SymbolIcon Symbol="Home" />
                            <TextBlock Text="Home" VerticalAlignment="Center"
                                   Margin="15,0,0,0"/>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem x:Name="food" IsSelected="False">
                        <StackPanel Orientation="Horizontal">
                            <SymbolIcon Symbol="Shop" />
                            <TextBlock Text="Food and snacks" VerticalAlignment="Center"
                                   Margin="15,0,0,0"/>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem x:Name="movies" IsSelected="False">
                        <StackPanel Orientation="Horizontal">
                            <SymbolIcon Symbol="Video" />
                            <TextBlock Text="Movies" VerticalAlignment="Center"
                                   Margin="15,0,0,0"/>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem x:Name="music" IsSelected="False">
                        <StackPanel Orientation="Horizontal">
                            <SymbolIcon Symbol="Audio" />
                            <TextBlock Text="Music" VerticalAlignment="Center"
                                   Margin="15,0,0,0"/>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem x:Name="chat" IsSelected="False">
                        <StackPanel Orientation="Horizontal">
                            <SymbolIcon Symbol="Message" />
                            <TextBlock Text="iChat" VerticalAlignment="Center"
                                   Margin="15,0,0,0"/>
                        </StackPanel>
                    </ListViewItem>
                </ListView>
            </StackPanel>
        </SplitView.Pane>
        <Grid x:Name="mainGrid" Margin="10" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*" />
                <RowDefinition Height="3*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Row="1" Grid.Column="1">
                <TextBlock Text="Dikke layout ikr"></TextBlock>
                <TextBlock Text="{x:Bind ViewModel.Flight.Destination, Mode=OneWay}"></TextBlock>
                <TextBlock Text="{x:Bind ViewModel.Flight.Arrival, Mode=OneWay}"></TextBlock>
                <TextBlock Text="{x:Bind ViewModel.Flight.Departure, Mode=OneWay}"></TextBlock>
                <TextBlock Text="{x:Bind ViewModel.Flight.EstimatedArrival, Mode=OneWay}"></TextBlock>
                <TextBlock Text="{x:Bind ViewModel.Flight.FlightName, Mode=OneWay}"></TextBlock>
            </StackPanel>
        </Grid>
    </SplitView>
    

    
