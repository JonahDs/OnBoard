<Page
    x:Class="OnBoardUWP.Views.Homepage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OnBoardUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">


    <Grid x:Name="mainGrid" Margin="10" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="3*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="1" Grid.Column="1">
            <TextBlock Text="Dikke layout ikr"></TextBlock>
            <TextBlock Text="{x:Bind ViewModel.Flight.Destination, Mode=OneWay}"></TextBlock>
            <TextBlock Text="{x:Bind ViewModel.Flight.Arrival, Mode=OneWay}"></TextBlock>
            <TextBlock Text="{x:Bind ViewModel.Flight.Departure, Mode=OneWay}"></TextBlock>
            <TextBlock Text="{x:Bind ViewModel.Flight.EstimatedArrival, Mode=OneWay}"></TextBlock>
            <TextBlock Text="{x:Bind ViewModel.Flight.FlightName, Mode=OneWay}"></TextBlock>
        </StackPanel>
    </Grid>
</Page>
